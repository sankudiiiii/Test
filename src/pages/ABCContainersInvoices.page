<apex:page standardcontroller="OpportunityLineItem" renderAs="pdf" extensions="ABCContainersInvoicesExtension" applyHtmlTag="false" showheader="false" sidebar="false">
	<head>
		<style>
			h2 {
				color:blue;
				float:right;
			}
			#datetable {
				float:right;
				border-collapse : collapse;
			}
			#datetable th {
				background-color: blue;
				border : 1px solid;
			}
			#datetable td {
				border : 1px solid;
			}
			#infotable {
				float:left;
			}
			#desctable {
				margin-top:50%;
				position:relative;
				width:100%;
				border-collapse : collapse;
				border : 1px solid;
				position:absolute; top:200px;
			}
			#desctable th {
				background-color: blue;
				border : 1px solid;
			}
			.brdr {
				border : 1px solid;
			}
			.rt {
				text-align:right;
			}
			#p1 {
				text-align:center;
				position:absolute; top:800px; left : 164px;
			}
			#p2 {
				text-align:center;
				position:absolute; top:850px; left : 150px;
			}
		</style>
	</head>
	<table id='datetable'>
		<caption>INVOICE</caption>
		<tr>
			<th>Invoice Number</th>
			<th>Date</th>
		</tr>
		<tr>
			<td></td>
			<td>{!li.servicedate}</td>
		</tr>
	</table>
	<table id='infotable'>
		<tr>
			<td>{!acc.name}</td>
		</tr>
		<tr>
			<td>{!acc.billingstreet}</td>
		</tr>
		<tr>
			<td>{!acc.billingcity},{!acc.billingstate},{!acc.billingpostalcode}</td>
		</tr>
		<tr>
			<td>{!acc.phone}</td>
		</tr>
	</table>
	<table id='infotable'>
		<tr>
			<th>BILL TO</th>
		</tr>
		<tr>
			<td>{!opp.name}</td>
		</tr>
		<tr>
			<td>{!acc.name}</td>
		</tr>
		<tr>
			<td>{!acc.billingstreet}</td>
		</tr>
		<tr>
			<td>{!acc.billingcity},{!acc.billingstate},{!acc.billingpostalcode}</td>
		</tr>
		<tr>
			<td>{!acc.phone}</td>
		</tr>
		<tr>
			<td>{!acc.email_address__c}</td>
		</tr>
	</table>
	<table id='desctable'>
		<tr>
			<th>Description</th>
			<th class='rt'>Amount</th>
		</tr>
		<tr>
			<td>Service fee</td>
			<td class='rt'>{!servicefee}</td>
		</tr>
		<tr>
			<td>Labour {!labourhour} hrs at ${!labour}/hr</td>
			<td class='rt'>{!labourcost}</td>
		</tr>
		<tr>
			<td>Line Item {!li.quantity} at ${!li.unitprice}/line item</td>
			<td class='rt'>{!licost}</td>
		</tr>
		<tr>
			<td>Tax (){!tax}%)</td>
			<td class='rt'>{!taxamount}</td>
		</tr>
		<tr>
			<td class='brdr'><i>Thank you for your business!</i></td>
			<td class='rt brdr'><h4>Total {!total}</h4></td>
		</tr>
	<p id="p1">If you have any questions about this invoice, please contact</p><br></br>
	<p id="p2">{!usr.name}, {!usr.phone}, {!usr.email}</p>
	</table>
</apex:page>